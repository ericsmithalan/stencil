{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "build/dist",
        "module": "esnext",
        "target": "es6",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": false,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": false,
        "paths": {
            "@core": ["src/core/index"],
            "@core.components": ["src/core/components/index"],
            "@core.electron": ["src/core/electron/index"],
            "@core.enums": ["src/core/enums/index"],
            "@core.icons": ["src/core/icons/index"],
            "@core.interfaces": ["src/core/interfaces/index"],
            "@core.shell": ["src/core/shell/index"],
            "@core.utils": ["src/core/utils/index"],
            "@core.theme": ["src/core/theme/index"],
            "@core.settings": ["src/core/Settings.ts"],

            "@app": ["src/app/index"],
            "@app.components": ["src/app/components/index"],
            "@app.pages": ["src/app/pages/index"],
            "@app.theme": ["src/app/theme/index"]
        }
    },
    "exclude": ["node_modules", "build", "scripts", "acceptance-tests", "webpack", "jest", "src/setupTests.ts"]
}
