{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "build/dist",
        "target": "es6",
        "moduleResolution": "node",
        "lib": ["es6", "dom"],
        "module": "esnext",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "jsx": "react",
        "removeComments": true,
        "rootDir": "src",
        "noImplicitReturns": false,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "declaration": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "stripInternal": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@stencil.store": ["src/core/store/index"],
            "@stencil.features/*": ["src/core/features/*"],
            "@stencil.components/*": ["src/core/components/*"],
            "@stencil.app/*": ["src/app/*"]
        }
    },
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts"
    ]
}
