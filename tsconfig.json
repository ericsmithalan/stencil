{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "build/dist",
        "target": "es6",
        "moduleResolution": "node",
        "lib": ["es6", "dom"],
        "types": ["reflect-metadata"],
        "module": "esnext",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "jsx": "react",
        "removeComments": true,
        "rootDir": "src",
        "noImplicitReturns": false,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "declaration": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "stripInternal": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@core": ["src/core/index"],
            "@core.debug": ["src/core/debug/index"],
            "@core.components": ["src/core/components/index"],
            "@core.main": ["src/core/main/index"],
            "@core.models": ["src/core/models/index"],
            "@core.utils": ["src/core/utils/index"],
            "@core.themes": ["src/core/themes/index"],
            "@app": ["src/app/index"],
            "@app.drawings": ["src/app/drawings/index"],
            "@app.pages": ["src/app/pages/index"]
        }
    },
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts"
    ]
}
